<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Top level DayNight theme to be used in AndroidManifest.xml-->
    <style name="Theme.PermissionList" parent="Base.Theme.PermissionList">
        <!--Material color attributes (dark theme) -->
        <item name="colorPrimary">@color/material_teal_200</item>
        <item name="colorPrimaryVariant">@color/material_teal_400</item>
        <item name="colorPrimaryDark">@color/material_teal_700</item>
        <item name="colorSecondary">@color/material_red_200</item>
        <item name="colorSecondaryVariant">@color/material_red_500</item>
        <item name="colorTertiary">@color/material_green_300</item>
        <item name="colorTertiaryVariant">@color/material_green_600</item>
        <item name="android:colorBackground">@color/material_grey_900</item>
        <item name="colorSurface">@color/material_black_1000</item>
        <item name="colorError">@color/material_pink_200</item>
        <item name="colorOnPrimary">@color/material_black_1000</item>
        <item name="colorOnSecondary">@color/material_black_1000</item>
        <item name="colorOnTertiary">@color/material_black_1000</item>
        <item name="colorOnBackground">@color/material_white_1000</item>
        <item name="colorOnSurface">@color/material_white_1000</item>
        <item name="colorOnError">@color/material_black_1000</item>
        <item name="android:statusBarColor" tools:targetApi="21">?attr/colorSurface</item>
        <item name="android:navigationBarColor" tools:targetApi="21">?attr/colorSurface</item>
    </style>

    <style name="Widget.PermissionList.FastScroller" parent="Base.Widget.PermissionList.FastScroller">
        <item name="handleColor">?attr/colorSecondary</item>
        <item name="bubbleColor">?attr/colorSecondary</item>
        <item name="trackColor">?attr/colorSecondaryVariant</item>
        <item name="bubbleTextColor">?attr/colorOnSecondary</item>
    </style>

    <style name="Widget.PermissionList.ThemableSwipeRefreshLayout" parent="Base.Widget.PermissionList.ThemableSwipeRefreshLayout">
        <item name="progressBackgroundColor">?attr/colorSurface</item>
        <item name="progressColor1">?attr/colorSecondary</item>
        <item name="progressColor2">?attr/colorSecondary</item>
        <item name="progressColor3">?attr/colorSecondary</item>
        <item name="progressColor4">?attr/colorSecondary</item>
    </style>
</resources>