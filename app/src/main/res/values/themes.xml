<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <!--Top level DayNight theme to be used in AndroidManifest.xml-->
    <style name="Theme.PermissionList" parent="Base.Theme.PermissionList"/>
    <!--Base custom theme which will be shared between both light and dark theme variants-->
    <style name="Base.Theme.PermissionList" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!--Material color attributes (light theme) -->
        <!--colorPrimary colors map to components and elements, such as app bars and buttons. -->
        <!--colorSecondary colors are most often used as accents on components, such as FABs and -->
        <!--selection controls.-->
        <item name="colorPrimary">@color/material_teal_500</item>
        <item name="colorPrimaryVariant">@color/material_teal_700</item>
        <item name="colorPrimaryDark">@color/material_teal_900</item>
        <item name="colorSecondary">@color/material_red_400</item>
        <item name="colorSecondaryVariant">@color/material_red_700</item>
        <item name="colorTertiary">@color/material_green_500</item>
        <item name="colorTertiaryVariant">@color/material_green_800</item>
        <!--colorBackground appears behind scrollable content and is used for the default window-->
        <!--background. colorSurface is mapped to the surface of components such as cards, sheets-->
        <!--and menus. colorError is used to indicate an error state for components such as-->
        <!--text fields.-->
        <item name="android:colorBackground">@color/material_grey_100</item>
        <item name="colorSurface">@color/material_white_1000</item>
        <item name="colorError">@color/material_pink_600</item>
        <!--"On" colors define how text, icons and strokes are colored in relation to the surface-->
        <!--on which they appear.-->
        <item name="colorOnPrimary">@color/material_white_1000</item>
        <item name="colorOnSecondary">@color/material_white_1000</item>
        <item name="colorOnTertiary">@color/material_white_1000</item>
        <item name="colorOnBackground">@color/material_black_1000</item>
        <item name="colorOnSurface">@color/material_black_1000</item>
        <item name="colorOnError">@color/material_white_1000</item>
        <!--Material type attributes-->
        <item name="textAppearanceHeadline1">@style/TextAppearance.PermissionList.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.PermissionList.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.PermissionList.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.PermissionList.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.PermissionList.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.PermissionList.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.PermissionList.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.PermissionList.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.PermissionList.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.PermissionList.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.PermissionList.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.PermissionList.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.PermissionList.Overline</item>
        <!--Material shape attributes-->
        <item name="shapeAppearanceSmallComponent">@style/ShapeAppearance.PermissionList.SmallComponent</item>
        <item name="shapeAppearanceMediumComponent">@style/ShapeAppearance.PermissionList.MediumComponent</item>
        <item name="shapeAppearanceLargeComponent">@style/ShapeAppearance.PermissionList.LargeComponent</item>
        <!--Component styles-->
        <item name="materialAlertDialogTheme">@style/ThemeOverlay.MaterialComponents.Dialog.Alert</item>
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.PermissionList.BottomSheetDialog</item>
        <item name="navigationViewStyle">@style/Widget.PermissionList.NavigationView</item>
        <item name="toolbarStyle">@style/Widget.MaterialComponents.Toolbar.PrimarySurface</item>
        <!--Status Bar and navigationbar styles-->
        <item name="android:statusBarColor" tools:targetApi="21">?attr/colorPrimaryDark</item>
        <item name="android:navigationBarColor" tools:targetApi="21">?attr/colorPrimary</item>
    </style>

    <style name="Widget.PermissionList.FastScroller" parent="Base.Widget.PermissionList.FastScroller">
        <item name="handleColor">?attr/colorSecondary</item>
        <item name="bubbleColor">?attr/colorSecondary</item>
        <item name="trackColor">?attr/colorSecondaryVariant</item>
        <item name="bubbleTextColor">?attr/colorOnSurface</item>
    </style>

    <style name="Widget.PermissionList.ThemableSwipeRefreshLayout" parent="Base.Widget.PermissionList.ThemableSwipeRefreshLayout">
        <item name="progressBackgroundColor">?attr/colorSurface</item>
        <item name="progressColor1">?attr/colorSecondary</item>
        <item name="progressColor2">?attr/colorSecondary</item>
        <item name="progressColor3">?attr/colorSecondary</item>
        <item name="progressColor4">?attr/colorSecondary</item>
    </style>
</resources>